{
  "apiVersion": "apps/v1",
  "kind": "Deployment",
  "metadata": {
    "annotations": {
      "description": "Обработчик проверки в рамках СМЭВ из Kafka: Слушатель ответа на проверку на на предмет наличия неуплаченных штрафов"
    },
    "name": "svcapp-checksmevpayments-load",
    "namespace": "default",
    "labels": {
      "app": "svcapp-checksmevpayments-load"
    }
  },
  "spec": {
    "selector": {
      "matchLabels": {
        "app": "svcapp-checksmevpayments-load"
      }
    },
    "replicas": 0,
    "template": {
      "metadata": {
        "labels": {
          "app": "svcapp-checksmevpayments-load"
        }
      },
      "spec": {
        "hostname": "svcapphost-checksmevpayments-load",
        "volumes": [
          {
            "name": "pvc",
            "persistentVolumeClaim": {
              "claimName": "ceph-share-claim"
            }
          }
        ],
        "containers": [
          {
            "name": "svcapp",
            "image": "r77ci/svcapp:1.0.8-SNAPSHOT",
            "imagePullPolicy": "Always",
            "command": [
              "java",
              "-Dfile.encoding=UTF8",
              "-cp",
              "svcapp-1.0.8-SNAPSHOT.jar:libs/*",
              "com.centerinform.svcapp.SvcApplication"
            ],
            "args": [
              "--spring.config.location=file:/mnt/ceph/settings/svcapp/",
              "--spring.profiles.active=deploy",
              "--logging.config=/mnt/ceph/settings/svcapp/log4j2-deploy.xml",
              "--kafka",
              "--topicname=checksmevpayments_response"
            ],
            "volumeMounts": [
              {
                "name": "pvc",
                "mountPath": "/mnt/ceph"
              }
            ],
            "envFrom": [
              {
                "configMapRef": {
                  "name": "svcapp-kubernetes-configmap"
                }
              }
            ],
            "resources": {
              "requests": {
                "cpu": "50m",
                "memory": "250Mi"
              },
              "limits": {
                "cpu": "250m"
              }
            }
          }
        ]
      }
    }
  }
}
